@inject IHttpContextAccessor Accessor
@{
    <meta charset="UTF-8">
    ViewBag.Title = "Registrarse";
    <meta name="viewport" content="width=device-width, user-scalable=yes, initial-scale=1.0, maximum-scale=3.0, minimum-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link rel="stylesheet" href="~/css/Registrarse.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_1_SGF_Presentacion.styles.css" asp-append-version="true" />
}
<body>
    <form class="formulario">

        <h1>Registrarse</h1>
        <div class="contenedor">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-xl-12 col-xxl-12">
                        <div class="input-group">
                            <div class="form-outline libre">
                                <input id="nombrecompleto" type="search" class="form-control filtrar input-especiales">
                                <label class="form-label" for="nombrecompleto"><i class="fas fa-user icon"></i> Nombre Completo</label>
                            </div>
                            <span class="obligatorio-rojo Msg_nombrecompleto"> *Por favor, rellene este campo</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-lg-12 col-xl-12 col-xxl-12">
                        <div class="input-group">
                            <div class="form-outline libre">
                                <input id="nombreusuario" type="search" class="form-control filtrar input-especiales">
                                <label class="form-label" for="nombreusuario"><i class="fas fa-user-cog icon"></i> Nombre de usuario</label>
                            </div>
                        </div>
                        <span class="obligatorio-rojo Msg_nombreusuario"> *Por favor, rellene este campo</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-lg-12 col-xl-12 col-xxl-12">
                        <div class="input-group">
                            <div class="form-outline libre">
                                <input id="correo" type="search" class="form-control filtrar input-especiales">
                                <label class="form-label" for="correo"><i class="fas fa-envelope icon"></i> Correo electrónico</label>
                            </div>
                        </div>
                        <span class="obligatorio-rojo Msg_correo"> *Por favor, digite un correo electrónico válido</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-lg-12 col-xl-12 col-xxl-12">
                        <div class="input-group">
                            <div class="form-outline libre">
                                <input id="nuevacontrasenia" type="password" class="form-control filtrar input-especiales" style="width: 100% !important;">
                                <label class="form-label" for="nuevacontrasenia"><i class="fas fa-key icon"></i> Contraseña</label>
                            </div>
                            <span class="obligatorio-rojo Msg_nuevacontrasenia"> *Por favor, rellene este campo</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-lg-12 col-xl-12 col-xxl-12">
                        <div class="input-group">
                            <div class="form-outline libre">
                                <input id="confirmarcontrasenia" type="password" class="form-control filtrar input-especiales" style="width: 100% !important;">
                                <label class="form-label" for="confirmarcontrasenia"><i class="fas fa-key icon"></i> Confirmar Contraseña</label>
                            </div>
                            <span class="obligatorio-rojo Msg_confirmarcontrasenia"> *Por favor, rellene este campo</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-lg-12 col-xl-12 col-xxl-12">
                        <div class="input-group">
                            <div class="form-outline libre">
                                <input id="pin" type="search" class="form-control filtrar input-especiales">
                                <label class="form-label" for="pin"><i class="far fa-question-circle icon"></i> Pin de recuperacion de contraseña</label>
                            </div>
                            <span class="obligatorio-rojo Msg_pin"> *Por favor, digite un pin válido</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="input-group-prepend">
                        <input id="btnRegistrarse" onclick="Registrarse();" value="Registrarme" class="button">
                        <div id="liveAlertPlaceholder"></div>
                        <p>Al registrarte, aceptas nuestras Condiciones de uso y Política de privacidad.</p>
                        <p>¿No tienes una cuenta? <a class="link" href="@Url.Action("Registrarse","Login")"> Registrarse </a><br /></p>
                        <p>¿Ya tienes una cuenta?<a class="link" href="@Url.Action("Login","Login")"> Iniciar Sesion</a></p>
                    </div>
                </div>
            </div>
    </form>
</body>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/Registrarse.js" asp-append-version="true"></script>
<script type="text/javascript">
    //Seccion de variables para ruta ajax
    const RutaIniciarSesion = '@Url.Action("Login", "Login")';
    const RutaInicio = '@Url.Action("Resumen", "Resumen")';
    const RutaValidarCorreoExiste = '@Url.Action("ValidarCorreoExiste", "Login")';
    const RutaValidaIdUsuarioExiste = '@Url.Action("ValidaIdUsuarioExiste", "Login")';
    const RutaRegistrarse = '@Url.Action("RegistrarUsuario", "Login")';
</script>